

<div class="row">
  <div class="col-auto">
    <h2>Add a comment</h2>
  
    <div class="body">
      <form class="form comment-form">
        {{#each posts as |post|}}
        <div class="form-group mb-3">
          <label for="comment-title" class="form-label fw-bold">Select a post to comment on</label>
          <select class="form-select" id="comment-title">
            
              <option value="{{post.comment.post_id}}">{{post.comment.comment}}</option>
          </select>
        </div>
        {{/each}}
        <div class="form-group mb-3">
          <label for="comment-content" class="form-label fw-bold">Comment</label>
          <textarea class="form-control" id="comment-content" rows="5"></textarea>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="comment-btn">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>